datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Link {
    id          Int    @id @default(autoincrement())
    label       String @unique
    destination String
}

model User {
    id                 Int      @id @default(autoincrement())
    email              String   @unique
    authorization_tier AuthTier @default(Viewer)
    password           String
}

enum AuthTier {
    Viewer
    Editor
    Admin
}

model Invite {
    id    Int    @id @default(autoincrement())
    email String @unique
}
